<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:background="@color/b_main_white"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:textStyle="bold"
                android:padding="10dp"
                android:id="@+id/tv_busstation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="天府五街"
                android:textColor="@color/b_main_black"
                android:drawableLeft="@mipmap/businquiry_result_bus"
                android:drawablePadding="10dp"
                android:textSize="16sp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/b_text_gray"
                android:textSize="14sp"
                android:text="距你" />
            <TextView
                android:id="@+id/tvdistence"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="52"
                android:textColor="@color/main_default"
                android:textSize="14sp" />
            <TextView
                android:layout_marginRight="10dp"
                android:id="@+id/textView3"
                android:textColor="@color/b_text_gray"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="米" />

        </LinearLayout>
    </LinearLayout>



    <com.library.flowlayout.NestedRecyclerView
        android:background="@color/b_main_white"
        android:id="@+id/mRv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"/>
    <include layout="@layout/include_space_15"/>
</LinearLayout>