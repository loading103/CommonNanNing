<resources>

    <!--label样式-->
    <style name="labelStyle">
        <item name="android:paddingBottom">@dimen/dp_3</item>
        <item name="android:paddingLeft">@dimen/dp_10</item>
        <item name="android:paddingRight">@dimen/dp_10</item>
        <item name="android:paddingTop">@dimen/dp_3</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <!--微信登录-->
    <style name="wx_login_style" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_right_out</item><!--退出动画-->
        <item name="android:activityOpenExitAnimation">@anim/slide_right_in</item>
        <!--<item name="android:background">@color/color_transparent_9000</item>-->
    </style>
    <!--  居中的平均分配的的TextView-->
    <style name="centerTextMain">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/sp_11</item>
        <item name="android:drawablePadding">6dp</item>
        <item name="android:textColor">@drawable/selector_txt_color_main_gray</item>
        <item name="android:gravity">center</item>
    </style>
    <!--景区详情item统一左右边距-->
    <style name="scenic_padding_style">
        <item name="android:paddingLeft">@dimen/dp_11</item>
        <item name="android:paddingRight">@dimen/dp_11</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/gray_line</item>
        <item name="colorControlActivated">@color/orange</item>
    </style>
    <!--  居中的平均分配的的TextView-->
    <style name="centerText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:drawablePadding">@dimen/dp_6</item>
        <item name="android:textColor">@drawable/selected_txt_color_gray_orange</item>
        <item name="android:gravity">center</item>
    </style>
    <!--  居中的平均分配的的TextView2-->
    <style name="centerText2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:drawablePadding">@dimen/dp_6</item>
        <item name="android:textColor">@drawable/selected_txt_color_gray_orange</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="RatingBar_CustomColor" parent="@android:style/Widget.Holo.RatingBar.Indicator">
        <!--Background Color-->
        <item name="colorControlNormal">@color/line_gray</item>
        <!--Progress Color-->
        <item name="colorControlActivated">@color/main_orange</item>
    </style>
    <!-- 订单页面的顶部的导航栏的RadioButton的Style -->
    <style name="MineOrderRadioBtn">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:textSize">@dimen/sp_12</item>
        <item name="android:textColor">@drawable/selected_txt_color_gray_main</item>
        <item name="android:gravity">center</item>
        <item name="android:drawableBottom">@drawable/selector_line_main_gray</item>
        <item name="android:drawablePadding">@dimen/dp_6</item>
    </style>

    <style name="dialog" parent="@android:style/Theme.Holo.Light.Dialog">
        <!-- 这里设置背景为透明，为了隐藏边框 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <!-- 这里是修改顶部标题背景颜色，具体颜色自己定，可以是图片 -->
        <item name="android:topDark">@color/white</item>
        <!-- 这里是修改内容区域背景颜色 -->
        <item name="android:centerDark">@color/white</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Translucent</item>
    </style>

    <!-- ==================MyWebview========网页加载时的进度对话框========================== -->
    <style name="mywebview_loading_style" parent="android:style/Theme.Dialog">
        <!-- Dialog的windowFrame框为无 -->
        <item name="android:windowFrame">@null</item>
        <!-- 是否显示title -->
        <item name="android:windowNoTitle">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 设置dialog的背景：#00000000透明色 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 背景变灰：整个屏幕变灰，配合setCanceledOnTouchOutside(false) -->
        <item name="android:backgroundDimEnabled">false</item>
        <!-- 对话框是否有遮盖 -->
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <!--主要是报价的服务使用的转换字体的-->
    <style name="style_main_bold">
        <item name="android:textColor">@color/main_default</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--上下边距5的内容text-->
    <style name="contenttext">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lineSpacingExtra">@dimen/dp_5</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:textColor">@color/main_gray</item>
    </style>
    <!--上下边距5的内容text-->
    <style name="contenttext1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lineSpacingExtra">@dimen/dp_5</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:textColor">@color/text_black</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- 弹框的 item-->
    <style name="rb_filter" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:gravity">center_vertical</item>
        <item name="android:button">@null</item>
        <item name="android:textColor">@drawable/selector_txt_color_main_gray</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_50</item>
        <item name="android:paddingTop">@dimen/dp_4</item>
        <item name="android:paddingBottom">@dimen/dp_4</item>
        <item name="android:paddingLeft">@dimen/dp_15</item>
        <item name="android:paddingRight">@dimen/dp_15</item>
        <item name="android:textSize">@dimen/sp_15</item>
    </style>


    <style name="PrivacyStatementDialog" parent="@style/LightDialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>


    <!-- 加载弹框样式 -->
    <style name="LightDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan
        </item>
    </style>
</resources>
