<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fl_complaint"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.example.tomasyb.baselib.widget.HeadView
            android:id="@+id/headView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/complaint_phone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_36"
            android:background="#fff6f0"
            android:drawableRight="@mipmap/online_complaint_phone_normal"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_16"
            android:paddingRight="@dimen/dp_16"
            android:text="投诉电话：12301"
            android:textColor="#ff7e00"
            android:textSize="@dimen/sp_15" />

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:descendantFocusability="blocksDescendants"
            android:fillViewport="true"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_48"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingLeft="@dimen/dp_16"
                        android:paddingRight="@dimen/dp_16">

                        <TextView
                            android:drawableLeft="@mipmap/travel_scenic_bill_contact_required"
                            android:drawablePadding="@dimen/dp_5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="姓名         "
                            android:textColor="@color/main_black_gray"
                            android:textSize="@dimen/sp_16" />

                        <EditText
                            android:id="@+id/edt_name"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/dp_24"
                            android:background="@android:color/transparent"
                            android:cursorVisible="true"
                            android:gravity="center_vertical"
                            android:hint="填写真实姓名才能生成有效投诉"
                            android:inputType="text"
                            android:singleLine="true"
                            android:textColor="@color/main_black"
                            android:textColorHint="@color/main_gray"
                            android:textCursorDrawable="@drawable/shap_edittext_show"
                            android:textSize="@dimen/sp_16" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_1"
                        android:layout_marginLeft="@dimen/dp_16"
                        android:background="@color/gray_line" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_48"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingLeft="@dimen/dp_16"
                        android:paddingRight="@dimen/dp_16">

                        <TextView
                            android:drawableLeft="@mipmap/travel_scenic_bill_contact_required"
                            android:drawablePadding="@dimen/dp_5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="性别         "
                            android:textColor="@color/main_black_gray"
                            android:textSize="@dimen/sp_16" />

                        <TextView
                            android:id="@+id/txt_sex"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/dp_24"
                            android:background="@android:color/transparent"
                            android:drawableRight="@mipmap/right"
                            android:gravity="center_vertical"
                            android:hint="请必须选择你的性别"
                            android:text="男"
                            android:textColor="@color/main_black"
                            android:textColorHint="@color/main_gray"
                            android:textSize="@dimen/sp_16" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_1"
                        android:layout_marginLeft="@dimen/dp_16"
                        android:background="@color/gray_line" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_48"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingLeft="@dimen/dp_16"
                        android:paddingRight="@dimen/dp_16">

                        <TextView
                            android:drawableLeft="@mipmap/travel_scenic_bill_contact_required"
                            android:drawablePadding="@dimen/dp_5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="手机号码"
                            android:textColor="@color/main_black_gray"
                            android:textSize="@dimen/sp_16" />

                        <EditText
                            android:id="@+id/txt_phone"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/dp_24"
                            android:background="@android:color/transparent"
                            android:cursorVisible="true"
                            android:gravity="center_vertical"
                            android:hint="请填写你的手机号码"
                            android:inputType="phone"
                            android:singleLine="true"
                            android:text=""
                            android:textColor="@color/main_black"
                            android:textColorHint="@color/main_gray"
                            android:textCursorDrawable="@drawable/shap_edittext_show"
                            android:textSize="@dimen/sp_16" />
                    </LinearLayout>

                    <include layout="@layout/include_space_10" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_48"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingLeft="@dimen/dp_16"
                        android:paddingRight="@dimen/dp_16">

                        <TextView
                            android:drawableLeft="@mipmap/travel_scenic_bill_contact_required"
                            android:drawablePadding="@dimen/dp_5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:text="被投诉方"
                            android:textColor="@color/main_black_gray"
                            android:textSize="@dimen/sp_16" />

                        <EditText
                            android:id="@+id/edt_to_comlpaint"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/dp_24"
                            android:background="@android:color/transparent"
                            android:cursorVisible="true"
                            android:gravity="center_vertical"
                            android:hint="请必填合同盖章单位名称"
                            android:inputType="text"
                            android:maxLines="3"
                            android:textColor="@color/main_black"
                            android:textColorHint="@color/main_gray"
                            android:textCursorDrawable="@drawable/shap_edittext_show"
                            android:textSize="@dimen/sp_16" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_1"
                        android:layout_marginLeft="@dimen/dp_16"
                        android:layout_marginTop="@dimen/dp_40"
                        android:background="@color/gray_line" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_48"
                        android:background="@color/white"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingLeft="@dimen/dp_16"
                        android:paddingRight="@dimen/dp_16">

                        <TextView
                            android:drawableLeft="@mipmap/travel_scenic_bill_contact_required"
                            android:drawablePadding="@dimen/dp_5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="发生地      "
                            android:textColor="@color/main_black_gray"
                            android:textSize="@dimen/sp_16" />

                        <TextView
                            android:id="@+id/txt_address"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/dp_24"
                            android:background="@android:color/transparent"
                            android:drawableRight="@mipmap/right"
                            android:gravity="center_vertical"
                            android:hint="请选择"
                            android:textColor="@color/main_black"
                            android:textColorHint="@color/main_gray"
                            android:textSize="@dimen/sp_16" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_1"
                        android:layout_marginLeft="@dimen/dp_16"
                        android:background="@color/gray_line" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:orientation="vertical"
                    android:padding="@dimen/dp_16"
                    android:paddingRight="@dimen/dp_16">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:drawableLeft="@mipmap/travel_scenic_bill_contact_required"
                            android:drawablePadding="@dimen/dp_5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="投诉标题"
                            android:textColor="@color/main_black_gray"
                            android:textSize="@dimen/sp_16" />

                        <TextView
                            android:id="@+id/txt_title_count"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:text="0 / 40"
                            android:textColor="@color/main_gray"
                            android:textSize="@dimen/sp_16" />
                    </LinearLayout>

                    <EditText
                        android:id="@+id/edt_title"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_50"
                        android:layout_marginTop="@dimen/dp_12"
                        android:background="@android:color/transparent"
                        android:cursorVisible="true"
                        android:hint="请填写您的投诉标题"
                        android:maxLength="40"
                        android:textColor="@color/main_black"
                        android:textColorHint="@color/main_gray"
                        android:textCursorDrawable="@drawable/shap_edittext_show"
                        android:textSize="@dimen/sp_16" />
                </LinearLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:background="@color/gray_line" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:orientation="vertical"
                    android:padding="@dimen/dp_16"
                    android:paddingLeft="@dimen/dp_16">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:drawableLeft="@mipmap/travel_scenic_bill_contact_required"
                            android:drawablePadding="@dimen/dp_5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="投诉事由"
                            android:textColor="@color/main_black_gray"
                            android:textSize="@dimen/sp_16" />

                        <TextView
                            android:id="@+id/txt_content_count"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:text="0 / 500"
                            android:textColor="#999999"
                            android:textSize="@dimen/sp_16" />
                    </LinearLayout>

                    <EditText
                        android:id="@+id/edt_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_12"
                        android:background="@android:color/transparent"
                        android:cursorVisible="true"
                        android:hint="写下你想说的投诉内容..."
                        android:maxLength="500"
                        android:textColor="@color/main_gray"
                        android:textCursorDrawable="@drawable/shap_edittext_show"
                        android:textSize="@dimen/sp_16" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@android:color/white"
                    android:orientation="vertical"
                    android:padding="@dimen/sp_16">

                    <LinearLayout
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="上传证据"
                            android:textColor="@color/main_black_gray"
                            android:textSize="@dimen/sp_16" />
                        <TextView
                            android:layout_marginLeft="@dimen/dp_5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="(最多添加5张图片)"
                            android:textColor="@color/orange_yellow"
                            android:textSize="@dimen/sp_12" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/recyclerView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_20"
                            android:visibility="visible" />
                    </LinearLayout>

                </LinearLayout>

                <include layout="@layout/include_line_one" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:padding="@dimen/dp_16">

                    <CheckBox
                        android:id="@+id/chk_agree"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@android:color/white"
                        android:button="@drawable/selector_choose_selected"
                        android:gravity="center_vertical"
                        android:padding="@dimen/dp_10"
                        android:paddingLeft="@dimen/dp_10"
                        android:text="同意协议内容"
                        android:textColor="#999999"
                        android:textSize="@dimen/sp_14"
                        android:visibility="gone" />

                    <CheckBox
                        android:id="@+id/chk_open"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@android:color/white"
                        android:button="@drawable/selector_choose_selected"
                        android:gravity="center_vertical"
                        android:padding="@dimen/dp_10"
                        android:paddingLeft="@dimen/dp_10"
                        android:text="允许公开"
                        android:textColor="#999999"
                        android:textSize="@dimen/sp_14" />
                </LinearLayout>



                <Button
                    android:id="@+id/btn_next"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_20"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_20"
                    android:background="@drawable/shape_main_rectangle"
                    android:gravity="center"
                    android:padding="@dimen/dp_10"
                    android:text="确认提交"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/sp_14" />
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>

    </LinearLayout>
</LinearLayout>