<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_scenic_two_ll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/dp_16">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.example.tomasyb.baselib.widget.img.RoundImageView
            android:id="@+id/item_strategy_index_img"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:src="@mipmap/common_ba_banner"
            app:corner_radius="3dp"
            app:type="round" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_16"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_strategy_index_recommend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_black"
                android:gravity="center"
                android:paddingBottom="@dimen/dp_3"
                android:paddingLeft="@dimen/dp_6"
                android:paddingRight="@dimen/dp_6"
                android:paddingTop="@dimen/dp_3"
                android:text="推荐"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_11"
                android:visibility="visible" />

            <TextView
                android:id="@+id/item_strategy_index_region"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_4"
                android:background="@drawable/shape_black"
                android:gravity="center"
                android:paddingBottom="@dimen/dp_3"
                android:paddingLeft="@dimen/dp_6"
                android:paddingRight="@dimen/dp_6"
                android:paddingTop="@dimen/dp_3"
                android:text=""
                android:textColor="@color/white"
                android:textSize="@dimen/sp_11"
                android:visibility="visible" />
        </LinearLayout>


    </FrameLayout>


    <LinearLayout
        android:id="@+id/item_strategy_index_introduce"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_strategy_index_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_16"
            android:ellipsize="end"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/main_black"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_12"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_strategy_index_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/destination_detail_icon_data"
                android:drawablePadding="@dimen/dp_5"
                android:text=""
                android:textColor="@color/txt_gray"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/item_strategy_index_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:drawableLeft="@mipmap/destination_detail_icon_good"
                android:drawablePadding="@dimen/dp_5"
                android:text=""
                android:textColor="@color/txt_gray"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/item_strategy_index_collect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:drawableLeft="@mipmap/destination_detail_icon_collection"
                android:drawablePadding="@dimen/dp_5"
                android:text=""
                android:textColor="@color/txt_gray"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/item_strategy_index_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:drawableLeft="@mipmap/destination_detail_icon_comment"
                android:drawablePadding="@dimen/dp_5"
                android:text=""
                android:textColor="@color/txt_gray"
                android:textSize="@dimen/sp_12" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>