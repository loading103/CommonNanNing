<?xml version="1.0" encoding="utf-8"?>
<io.agora.yview.swipdelmenu.SwipeMenuLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    app:ios="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_8"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_16"
        android:paddingRight="@dimen/dp_16">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_20"
            android:drawableLeft="@drawable/shape_main_rectangle"
            android:drawablePadding="@dimen/dp_12"
            android:text="陕西4日游"
            android:textColor="@color/main_black"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_16"
            android:orientation="vertical">

            <include layout="@layout/include_line_one" />

            <TextView
                android:id="@+id/item_mine_route_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_16"
                android:drawableLeft="@mipmap/my_stroke_time"
                android:drawablePadding="@dimen/dp_12"
                android:text="122"
                android:textColor="@color/main_black"
                android:textSize="@dimen/dp_13" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_12"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/item_mine_route_scenic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/my_stroke_information"
                    android:drawablePadding="@dimen/dp_12"
                    android:text=""
                    android:textColor="@color/main_black"
                    android:textSize="@dimen/dp_13" />

                <View
                    android:layout_width="@dimen/dp_2"
                    android:layout_height="@dimen/dp_2"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:layout_marginRight="@dimen/dp_8"
                    android:background="@drawable/shape_gray_radius" />

                <TextView
                    android:id="@+id/item_mine_route_hotel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/main_black"
                    android:textSize="@dimen/dp_13" />

                <View
                    android:layout_width="@dimen/dp_2"
                    android:layout_height="@dimen/dp_2"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:layout_marginRight="@dimen/dp_8"
                    android:background="@drawable/shape_gray_radius" />

                <TextView
                    android:id="@+id/item_mine_route_food"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/main_black"
                    android:textSize="@dimen/dp_13" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_mine_route_edit"
            android:layout_width="@dimen/dp_64"
            android:layout_height="match_parent"
            android:background="#ff9e05"
            android:text="编辑"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_15" />

        <TextView
            android:id="@+id/item_mine_route_delete"
            android:layout_width="@dimen/dp_64"
            android:layout_height="match_parent"
            android:background="#f12c20"
            android:text="删除"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_15" />
    </LinearLayout>
</io.agora.yview.swipdelmenu.SwipeMenuLayout>
