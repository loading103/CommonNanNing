<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/look_msg_ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/item_scenic_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_5"
            android:orientation="horizontal"
            android:padding="@dimen/dp_10">

            <ImageView
                android:id="@+id/item_scenic_img"
                android:layout_width="@dimen/dp_120"
                android:layout_height="@dimen/dp_85"
                android:scaleType="fitXY" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_5"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/gonggao_tv_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="标题"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/sp_16"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/gonggao_tv_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dp_10"
                        android:text="45"
                        android:textColor="@color/main"
                        android:textSize="@dimen/sp_16"
                        android:visibility="gone" />
                </LinearLayout>

                <TextView
                    style="@style/contenttext1"
                    android:layout_marginTop="@dimen/dp_10"
                    android:id="@+id/tv_bottom" />
                <TextView
                    android:textSize="@dimen/sp_13"
                    android:textColor="@color/text_gray"
                    android:layout_marginTop="@dimen/dp_10"
                    android:id="@+id/tv_bottomdistence"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="镇远真,相距12.5Km" />

            </LinearLayout>
        </LinearLayout>

        <include layout="@layout/include_line_one" />
    </LinearLayout>


</LinearLayout>