<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/shape_white_5"
    android:orientation="vertical"
    android:padding="@dimen/dp_20">

    <TextView
        android:id="@+id/route_name_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="修改行程名称"
        android:textColor="@color/b_main_black"
        android:textSize="@dimen/sp_18" />

    <EditText
        android:id="@+id/route_name_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_18"
        android:layout_marginTop="30dp"
        android:background="@drawable/shape_gray_rectangle_route_edit"
        android:hint="请输入行程名称"
        android:textColor="@color/main_gray"
        android:textSize="@dimen/sp_16" />


    <TextView
        android:id="@+id/route_name_sure"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:background="@drawable/shape_main_rectangle"
        android:gravity="center"
        android:text="确定"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_16" />


</LinearLayout>
