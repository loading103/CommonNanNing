<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="horizontal"
    android:paddingTop="@dimen/dp_8"
    android:paddingBottom="@dimen/dp_8"
    android:paddingLeft="@dimen/dp_16"
    android:paddingRight="@dimen/dp_16">


    <com.example.tomasyb.baselib.widget.img.RoundImageView
        app:type="round"
        app:corner_radius="@dimen/dp_3"
        android:id="@+id/iv_item_mine_collect_img"
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/dp_90"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:id="@+id/ll_collect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_6">

        <TextView
            android:id="@+id/tv_item_mine_collect_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="我"
            android:textColor="@color/main_black"
            android:textSize="@dimen/sp_16" />

        <LinearLayout
            android:id="@+id/ll_item_mine_collect_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_6"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="人均"
                android:textColor="@color/main_gray"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/tv_item_mine_collect_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_3"
                android:text="0"
                android:textColor="@color/main_default"
                android:textSize="@dimen/sp_20"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="元"
                android:textColor="@color/main"
                android:textSize="@dimen/sp_12" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_item_mine_collect_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_scenic_label"
                android:paddingBottom="@dimen/dp_3"
                android:paddingLeft="@dimen/dp_6"
                android:paddingRight="@dimen/dp_6"
                android:paddingTop="@dimen/dp_3"
                android:text="美食"
                android:textColor="@color/main_orange"
                android:textSize="@dimen/sp_10" />

            <TextView
                android:id="@+id/tv_item_mine_collect_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_weight="1"
                android:maxLines="2"
                android:textColor="@color/main_gray"
                android:textSize="@dimen/sp_12" />

            <ImageView
                android:id="@+id/iv_item_mine_collect_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/usercenter_icon_delect_normal" />
        </LinearLayout>


    </LinearLayout>


</LinearLayout>
