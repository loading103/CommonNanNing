<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/shape_white_5"
    android:orientation="vertical">

    <TextView
        android:id="@+id/version_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="删除行程"
        android:textColor="@color/b_main_black"
        android:textSize="@dimen/sp_18" />

    <TextView
        android:id="@+id/version_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_18"
        android:layout_marginTop="@dimen/dp_16"
        android:gravity="center"
        android:text="确认删除后需重新新增"
        android:textColor="@color/main_gray"
        android:textSize="@dimen/sp_15" />

    <include layout="@layout/include_line_one" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/version_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="15dp"
            android:text="取消"
            android:textColor="@color/main_black"
            android:textSize="@dimen/sp_18" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/b_line_gray" />

        <TextView
            android:id="@+id/delete_sure"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="15dp"
            android:text="确认删除"
            android:textColor="@color/main_default"
            android:textSize="@dimen/sp_18" />
    </LinearLayout>


</LinearLayout>
