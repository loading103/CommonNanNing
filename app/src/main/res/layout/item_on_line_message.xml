<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/select_space"
    android:divider="@null"
    android:orientation="vertical">


    <TextView
        android:id="@+id/item_msg_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_16"
        android:gravity="center"
        android:text="2018-06-10 上午9：52"
        android:textColor="@color/txt_gray"
        android:textSize="@dimen/sp_12" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/shape_white_rectangle"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_16"
        android:paddingRight="@dimen/dp_16">

        <TextView
            android:id="@+id/item_msg_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_16"
            android:ellipsize="end"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/main_black"
            android:textSize="@dimen/sp_16" />


        <TextView
            android:id="@+id/item_msg_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_16"
            android:ellipsize="end"
            android:maxLines="2"
            android:text=""
            android:textColor="@color/txt_gray"
            android:textSize="@dimen/sp_13" />

        <include layout="@layout/include_line_one" />

        <TextView
            android:id="@+id/item_msg_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@mipmap/right"
            android:paddingBottom="@dimen/dp_10"
            android:paddingTop="@dimen/dp_10"
            android:text="查看详情"
            android:textColor="@color/main_black"
            android:textSize="@dimen/sp_13" />
    </LinearLayout>


</LinearLayout>
