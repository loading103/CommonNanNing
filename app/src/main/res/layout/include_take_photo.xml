<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/take_photo_ll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="bottom"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_white_rectangle"
        android:orientation="vertical">

        <TextView
            android:id="@+id/take_photo_choose"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:gravity="center"
            android:text="相册"
            android:textColor="@color/main_default"
            android:textSize="@dimen/sp_14" />

        <include layout="@layout/include_line_one" />

        <TextView
            android:id="@+id/take_photo_take"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="拍照"
            android:textColor="@color/main_default"
            android:textSize="@dimen/sp_14" />
    </LinearLayout>

    <TextView
        android:id="@+id/take_photo_cancel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/shape_white_rectangle"
        android:gravity="center"
        android:text="取消"
        android:textColor="@color/main_default" />

</LinearLayout>
