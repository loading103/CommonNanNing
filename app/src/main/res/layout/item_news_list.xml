<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout

        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_16"
        android:orientation="horizontal">

        <com.example.tomasyb.baselib.widget.img.RoundImageView
            app:type="round"
            app:corner_radius="3dp"
            android:scaleType="fitCenter"
            android:id="@+id/item_news_cover"
            android:layout_width="@dimen/dp_120"
            android:layout_height="@dimen/dp_90"
            android:src="@mipmap/common_img_fail_h158" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_12"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_news_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/main_black"
                android:textSize="@dimen/sp_16"
                android:textStyle="bold" />

            <TextView
                style="@style/contenttext"
                android:id="@+id/item_news_summary"
                android:layout_marginTop="@dimen/dp_12" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_16"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/item_news_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/home_festival_time"
                    android:drawablePadding="@dimen/dp_4"
                    android:textColor="@color/main_gray"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:id="@+id/item_news_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:drawableLeft="@mipmap/home_festival_view"
                    android:drawablePadding="@dimen/dp_4"
                    android:textColor="@color/main_gray"
                    android:textSize="@dimen/sp_12" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <include layout="@layout/include_line_one" />

</LinearLayout>
