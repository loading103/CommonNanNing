<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/dp_16">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/item_route_scenic_img"
                android:layout_width="@dimen/dp_120"
                android:layout_height="@dimen/dp_90"
                android:scaleType="fitCenter"
                android:src="@mipmap/common_image_small" />

            <TextView
                android:id="@+id/item_route_status"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_20"
                android:layout_gravity="bottom"
                android:background="@drawable/shape_main_rectangle"
                android:gravity="center"
                android:paddingLeft="@dimen/dp_8"
                android:paddingRight="@dimen/dp_8"
                android:text="加入行程"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/item_route_count"
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/sp_12"
                android:layout_gravity="bottom|right"
                android:background="@drawable/shape_gray_rectangle"
                android:text="6"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_10" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_16"
            android:layout_marginLeft="@dimen/dp_12"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/item_route_scenic_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="火宫殿"
                    android:textColor="@color/main_black"
                    android:textSize="@dimen/sp_16" />

                <TextView
                    android:id="@+id/item_route_scenic_order"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginRight="@dimen/dp_16"
                    android:background="@mipmap/list_label_1"
                    android:text="票"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_10" />
            </LinearLayout>


            <android.support.v7.widget.RecyclerView
                android:id="@+id/item_route_scenic_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_8"
                android:scrollbars="none" />

            <TextView
                android:id="@+id/item_route_scenic_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/main_black_gray"
                android:textSize="@dimen/sp_13" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/item_route_scenic_distance"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textColor="@color/main_gray"
                    android:textSize="@dimen/sp_11" />

                <TextView
                    android:id="@+id/item_route_scenic_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textColor="@color/main_gray"
                    android:textSize="@dimen/sp_11" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <include layout="@layout/include_line_one" />

</LinearLayout>
