<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_fun_recommend_ll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp_16"
    android:layout_marginTop="@dimen/dp_20"
    android:layout_marginRight="@dimen/dp_16"
    android:background="@color/white"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/item_fun_recommend_img"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_171"
        android:layout_marginTop="@dimen/dp_10"
        android:scaleType="fitXY"
        android:src="@mipmap/banner_default" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_16"
        android:background="@color/white"
        android:orientation="vertical">


        <TextView
            android:id="@+id/item_fun_recommend_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/main_black"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold"
            tools:text="标题" />


        <LinearLayout
            android:id="@+id/ll_item_fun_recommend_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_12"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_fun_recommend_start_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_4"
                android:textColor="@color/main_black"
                android:textSize="@dimen/sp_12"
                tools:text="12312" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_4"
                android:text="开始"
                android:textColor="@color/main_gray"
                android:textSize="@dimen/sp_12" />

            <ImageView
                android:layout_width="@dimen/dp_1"
                android:layout_height="@dimen/dp_1"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_marginRight="@dimen/dp_8"
                android:src="@drawable/shape_gray_bg_radius" />

            <TextView
                android:id="@+id/item_fun_recommend_end_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_4"
                android:textColor="@color/main_black"
                android:textSize="@dimen/sp_12"
                tools:text="12312" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_4"
                android:text="结束"
                android:textColor="@color/main_gray"
                android:textSize="@dimen/sp_12" />
        </LinearLayout>


    </LinearLayout>
</LinearLayout>
