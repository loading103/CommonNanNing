<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_dialog_voice"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_black_5"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/dp_20">

    <ImageView
        android:id="@+id/iv_dialog_voice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/voice_recording" />

    <com.daqsoft.view.AudioPlayView
        android:id="@+id/play_dialog_voice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_15"
        app:count="5"
        app:space="5"
        app:tagColor="@android:color/white"
        app:tagMaxHeight="80"
        app:tagMinHeight="30"
        app:tagWidth="5" />

    <TextView
        android:id="@+id/tv_dialog_voice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:text="@string/txt_voice_recoding"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_14" />
</LinearLayout>