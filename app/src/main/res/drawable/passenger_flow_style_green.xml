<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!--  设置背景色  -->
    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <gradient
                android:centerColor="@color/space_gray"
                android:endColor="@color/space_gray"
                android:startColor="@color/space_gray" />
            <corners android:radius="@dimen/dp_5" />
        </shape>
    </item>

    <!--  设置进度条颜色  -->
    <item android:id="@android:id/progress">
        <clip>
            <shape android:shape="rectangle">
                <corners android:radius="@dimen/dp_5" />
                <gradient
                    android:centerColor="@color/flow_blue"
                    android:endColor="@color/flow_blue"
                    android:startColor="@color/flow_blue" />
            </shape>
        </clip>
    </item>
</layer-list>