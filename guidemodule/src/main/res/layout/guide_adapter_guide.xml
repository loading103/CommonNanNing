<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dp_16"
    android:paddingRight="@dimen/dp_16"
    android:paddingTop="@dimen/dp_16">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/view_pic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:actualImageScaleType="fitXY"
            app:failureImage="@mipmap/banner_default"
            app:failureImageScaleType="fitXY"
            app:placeholderImage="@mipmap/banner_default"
            app:placeholderImageScaleType="fitXY"
            app:roundedCornerRadius="@dimen/dp_5"
            app:viewAspectRatio="2" />

        <TextView
            android:id="@+id/txt_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|top"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_16"
            android:background="@color/black"
            android:drawablePadding="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_2"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_5"
            android:paddingTop="@dimen/dp_2"
            android:text=""
            android:textColor="@android:color/white" />
    </FrameLayout>

    <TextView
        android:id="@+id/txt_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_16"
        android:ellipsize="end"
        android:gravity="left|center_vertical"
        android:maxLines="1"
        android:text="名称"
        android:textColor="@color/main_black"
        android:textSize="@dimen/sp_16"
        android:textStyle="bold" />

    <include layout="@layout/include_line_one" />
</LinearLayout>