<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"

    android:layout_height="wrap_content"
    android:background="@drawable/z_ump_edit_bg_normal"
    android:orientation="vertical">

    <TextView
        android:id="@+id/z_tip_tv_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:text="温馨提示"
        android:textColor="@color/main"
        android:textSize="18sp"
        android:textStyle="bold" />

    <include
        android:id="@+id/z_tip_line_two"
        layout="@layout/z_linetwo" />

    <TextView
        android:id="@+id/z_tip_tv_dialog_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:textSize="18sp" />

    <include layout="@layout/include_line_one" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <Button
            android:id="@+id/z_tip_btn_dialog_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:padding="15dp"
            android:text="取消"
            android:textSize="18sp" />

        <include layout="@layout/z_verticalline" />

        <Button
            android:id="@+id/z_tip_btn_dialog_sure"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:padding="15dp"
            android:text="确定"
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout>