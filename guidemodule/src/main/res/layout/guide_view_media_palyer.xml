    <View
        android:layout_width="@dimen/dp_3"
        android:layout_height="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_3"
        android:background="@android:color/white" />

    <View
        android:layout_width="@dimen/dp_3"
        android:layout_height="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_3"
