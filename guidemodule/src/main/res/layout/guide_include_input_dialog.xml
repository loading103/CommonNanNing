<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:padding="@dimen/dp_10"
              android:layout_height="match_parent"
              android:background="@drawable/shape_white_rectangle"
    android:orientation="vertical">

    <TextView
        android:id="@+id/input_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="修改昵称"
        android:padding="@dimen/dp_10"
        android:gravity="center"
        android:textSize="@dimen/sp_15"
        android:textColor="@color/text_black"/>


    <EditText
        android:id="@+id/input_dialog_content"
        android:layout_margin="@dimen/dp_10"
        android:background="@drawable/shape_gray_rectangle_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_10"
        android:textColorHint="@color/text_gray"
        android:textColor="@color/text_gray"
        android:textSize="@dimen/sp_14"
        android:hint="请输入..."/>
    <include layout="@layout/include_line_one"/>

    <LinearLayout
        android:padding="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/input_dialog_cancel"
            android:textColor="@color/main"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_14"
            android:text="取消"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/gray_line"/>
        <TextView
            android:id="@+id/input_dialog_sure"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/main"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确定"/>
    </LinearLayout>



</LinearLayout>
